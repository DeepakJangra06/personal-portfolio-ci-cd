// Simplified Jenkinsfile for beginners
// This is a basic version without advanced features

pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Checking out code...'
                checkout scm
            }
        }
        
        stage('Install & Build') {
            steps {
                echo 'ğŸ”§ Installing dependencies and building...'
                sh '''
                    npm install
                    npm run build
                '''
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying to Firebase...'
                sh '''
                    npm install -g firebase-tools
                    firebase deploy --only hosting
                '''
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Deployment successful!'
        }
        failure {
            echo 'âŒ Deployment failed!'
        }
    }
}

