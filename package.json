{
  "dependencies": {
    "firebase": "^11.0.1"
  },
  "name": "personal-portfolio",
  "version": "1.0.0",
  "main": "main.js",
  "devDependencies": {
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "dev": "npx tailwindcss -i \"Personal Portfolio/src/input.css\" -o \"Personal Portfolio/dist/output.css\" --watch",
    "build:css": "npx tailwindcss -i \"Personal Portfolio/src/input.css\" -o \"Personal Portfolio/dist/output.css\" --minify",
    "prepare:assets": "node prepare-assets.js || bash prepare-assets.sh || prepare-assets.bat",
    "build": "npm run build:css && npm run prepare:assets",
    "deploy:firebase": "firebase deploy --only hosting",
    "deploy": "npm run build && npm run deploy:firebase",
    "deploy:netlify": "echo 'Upload the dist folder to netlify.com'",
    "preview": "cd Personal Portfolio/dist && python -m http.server 8000",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
